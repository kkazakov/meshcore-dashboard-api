# Meshcore Device Configuration

# Connection Type: ble, serial, or tcp
CONNECTION_TYPE=ble

# BLE Configuration
# Leave empty to auto-scan for devices, or specify MAC address
BLE_ADDRESS=

# Optional: PIN for BLE pairing (6 digits)
BLE_PIN=

# Serial Configuration (if using serial connection)
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUDRATE=115200

# TCP Configuration (if using TCP connection)
TCP_HOST=192.168.1.100
TCP_PORT=4000

# Enable debug logging (true/false)
DEBUG=false

# ClickHouse Database
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=meshcore_dashboard
CLICKHOUSE_USER=admin
CLICKHOUSE_PASSWORD=

# API Server
API_HOST=0.0.0.0
API_PORT=8000
